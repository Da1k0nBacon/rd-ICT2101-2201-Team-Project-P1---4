@{
    ViewData["Title"] = "Index Page";
        Layout = "_LayoutStudent";
}
<br/>
<br/>
<!--This page is for loading purposes. countdown 10 sec before loading challenge-->
 <link rel="stylesheet" href="~/style/dashboard.css" asp-append-version="true" />
<script>
    window.onload = function() {
    document.getElementById("my_audio").play();
}
</script>
<style>
    .center {
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 50%;
}

</style>
<div >
    
<audio id="my_audio" src="../sounds/squid.ogg" loop="loop" autoplay></audio>
        <h4 class="white">LOADING ...</h4>
        <progress value="0" max="10" id="progressBar" class="center"></progress>
       <img src="~/pic/animatedCar.gif" alt="Some scenery" class="center">
       
      <script>
         var timeleft = 10;
            var downloadTimer = setInterval(function(){
              if(timeleft <= 0){
                window.location.href = "Challenge";
              }
              document.getElementById("progressBar").value = 10 - timeleft;
              timeleft -= 1;
            }, 1000);
    </script>
</div>
