                  for (i = 0; i < c.length; i++) {
                    txt = txt + c[i].value + "<br>";
                    array.push(c[i].value);
                  }
                  console.log(array);

         });

         $('#clear').on('click', function() {
                 var div = document.getElementById('selectedCommand');
                 div.innerHTML="";

         });
</script> 